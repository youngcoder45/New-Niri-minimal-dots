// Generated by niri-settings - Edits will be overwritten!

prefer-no-csd

overview {
    zoom 0.5
}

animations {
    on
    slowdown 1.0
}

layout {
    shadow {
    off
    }

    gaps 8
//    default-column-display "tabbed"
    center-focused-column "never"
    // empty-workspace-above-first

    struts {
        left 0
        right 0
        top 0
        bottom 0
    }

    focus-ring {
        off
        width 2
        active-color "#7fc8ff"
        inactive-color "#505050"
    }

    border {
        off
        width 2
        active-color "#7fc8ff"
        inactive-color "#505050"
    }

    insert-hint {
        // off
        color "#ffc87f70"
    }

    tab-indicator {
        hide-when-single-tab
        place-within-column
        corner-radius 4
        width 4
        length total-proportion=1.0
        gap 4
        gaps-between-tabs 2
    }
}

window-rule {
    geometry-corner-radius 8
    clip-to-geometry true
    draw-border-with-background false
} 

input {
    // warp-mouse-to-focus
    focus-follows-mouse
    // disable-power-key-handling
    // workspace-auto-back-and-forth
    mod-key "Super"
    
    touchpad {
        tap
        // dwt
        // dwtp
        natural-scroll
        drag false
        // drag-lock
        // disabled-on-external-mouse
        // left-handed
        click-method "clickfinger"
        scroll-method "two-finger"
        accel-speed 0.20
        accel-profile "adaptive"
        tap-button-map "left-right-middle"
        scroll-factor 1.0
    }
    
    mouse {
        // natural-scroll
        // left-handed
        // middle-emulation
        accel-speed 0.20
        accel-profile "adaptive"
        scroll-factor 1.0
    }
    
    keyboard {
        track-layout "window"
        numlock
        repeat-delay 600
        repeat-rate 25
    }
}

hotkey-overlay {
    hide-not-bound
    skip-at-startup
    }

gestures {
    hot-corners {
        // off
    }
}

debug {
    // honor-xdg-activation-with-invalid-serial 
}

cursor {
    // hide-when-typing 
    // hide-after-inactive-ms {self.behavior_tab.inactive_spinbox.value()}
}
